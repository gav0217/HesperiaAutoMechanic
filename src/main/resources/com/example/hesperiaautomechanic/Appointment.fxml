<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="502.0" prefWidth="1015.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppointmentController">
    <children>
        <Label layoutX="470.0" layoutY="404.0" text="View Format">
            <font>
                <Font name="Times New Roman Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="appointmentTable" layoutY="83.0" prefHeight="312.0" prefWidth="1017.0">
            <columns>
                <TableColumn fx:id="appointment_ID" prefWidth="98.0" text="Appointment ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="appointment_ID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="title" prefWidth="79.0" text="Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="description" prefWidth="228.0" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="location" minWidth="2.0" prefWidth="76.0" text="Location">
                    <cellValueFactory>
                        <PropertyValueFactory property="location" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="type" prefWidth="93.0" text="Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="type" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="start" prefWidth="119.0" text="Start Date/Time">
                    <cellValueFactory>
                        <PropertyValueFactory property="start" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="end" prefWidth="111.0" text="End Date/Time">
                    <cellValueFactory>
                        <PropertyValueFactory property="end" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="contact_ID" prefWidth="79.0" text="Reference">
                    <cellValueFactory>
                        <PropertyValueFactory property="contact_Name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="customer_ID" prefWidth="78.0" text="Customer">
                    <cellValueFactory>
                        <PropertyValueFactory property="customer_Name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="user_ID" prefWidth="55.0" text="User">
                    <cellValueFactory>
                        <PropertyValueFactory property="user_Name" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <HBox layoutX="768.0" layoutY="412.0" prefHeight="26.0" prefWidth="235.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#appointmentDelete" text="Delete">
                    <font>
                        <Font name="Times New Roman Bold" size="12.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#appointmentModify" text="Modify">
                    <font>
                        <Font name="Times New Roman Bold" size="12.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#addAppointment" text="Add Appointment">
                    <font>
                        <Font name="Times New Roman Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <HBox layoutX="409.0" layoutY="428.0" prefHeight="20.0" prefWidth="200.0" spacing="10.0">
            <children>
                <RadioButton fx:id="mainMenuAll" mnemonicParsing="false" text="All">
                    <font>
                        <Font name="Times New Roman" size="12.0" />
                    </font>
                    <toggleGroup>
                        <ToggleGroup fx:id="viewFormat" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="mainMenuWeekly" mnemonicParsing="false" text="Weekly" toggleGroup="$viewFormat">
                    <font>
                        <Font name="Times New Roman" size="12.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="mainMenuMonthly" mnemonicParsing="false" prefHeight="16.0" prefWidth="75.0" text="Monthly" toggleGroup="$viewFormat">
                    <font>
                        <Font name="Times New Roman" size="12.0" />
                    </font>
                </RadioButton>
            </children>
        </HBox>
      <Label layoutX="387.0" text="Appointments">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="appointmentLogout" layoutX="946.0" layoutY="460.0" mnemonicParsing="false" onMouseClicked="#appointmentLogoutButton" text="Logout">
         <font>
            <Font name="Times New Roman Bold" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="appointmentSearchTextField" layoutX="666.0" layoutY="53.0" prefHeight="25.0" prefWidth="268.0" promptText="Search" />
      <Button fx:id="appointmentSearchButton" layoutX="947.0" layoutY="53.0" mnemonicParsing="false" text="Search" onMouseClicked="#appointmentSearchButton" />
    </children>
</AnchorPane>
